@using AuntCome.Models
@model ManageForgetPasswordViewModel
@{
    ViewBag.Title = "ForgetPassword";
}

<h2>忘记密码</h2>
<div class="container">
    <div class="row">
        @using (Html.BeginForm("ForgetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <table>
                <tr>
                    <td>@Html.LabelFor(m=>m.Username,new  { @class="control-label"})</td>
                    <td>@Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m=>m.Email,new { @class="control-label"})</td>
                    <td>@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m=>m.Phone,new { @class="control-label"})</td>
                    <td>@Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })</td>
                </tr>
                <tr>
                    <td colspan="2" class="form-group"><input type="submit" value="确定" class="btn btn-primary btn-block" /></td>
                </tr>
            </table>
        }
       
    </div>
</div>

