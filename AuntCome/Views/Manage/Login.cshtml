@using AuntCome.Models
@model ManageLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 阿姨来了后台管理系统</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-1 col-sm-3 col-lg-4"></div>

            <div class="col-xs-10 col-sm-6 col-lg-4">
                <br /><br /><br /><br /><br /><br /><br /><br />
                <div class="myformbox">
                    @Html.AntiForgeryToken()
                    <h2 class="text-center">欢迎登录</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @using (Html.BeginForm("Login", "Manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <table class="mytable">
                            <tr>
                                <td>@Html.LabelFor(m => m.Username, new { @class = "control-label text-center" })</td>
                                <td>
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(m => m.Password, new { @class = "control-label text-center" })</td>
                                <td>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <!--  <tr>
                        <td colspan="2" class="text-right">

                        </td>
                    </tr>-->
                            <tr>
                                <td colspan="2">@Html.ActionLink("忘记密码", "ForgetPassword")|@Html.ActionLink("没注册？成为管理员", "Register")</td>
                            </tr>
                            <tr>
                                <td colspan="2" class="form-group"><input type="submit" value="登录" class="btn btn-primary btn-block" /></td>
                            </tr>
                        </table>
                    }
                </div>
            </div>
            <div class="col-xs-1 col-sm-3 col-lg-4"></div>

        </div>
    </div>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}